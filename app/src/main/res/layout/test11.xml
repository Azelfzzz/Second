<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/writein1"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginTop="228dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/writein"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"

        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="136dp"
        android:text="计算"
        app:layout_constraintEnd_toEndOf="@+id/writein"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/writein"
        app:layout_constraintTop_toBottomOf="@+id/writein" />

    <TextView
        android:id="@+id/screen"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="388dp"
        android:text="BMI指数"
        android:textSize="35dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/writein1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/writein1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="94dp"
        android:layout_height="41dp"
        android:text="体重(千克)"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/writein"
        app:layout_constraintStart_toStartOf="@+id/writein" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="94dp"
        android:layout_height="41dp"
        android:text="身高(米)"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/writein1"
        app:layout_constraintStart_toStartOf="@+id/writein1" />
</androidx.constraintlayout.widget.ConstraintLayout>